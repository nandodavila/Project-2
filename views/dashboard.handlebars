  <div class="container-fluid">
    <div class="row row-cols-3">
      <div class="col-4">
        <div class="card m-2">
          <div class="card-header">
            <h4>The Wish List!</h4>
          </div>
          <div class="card-body">
            <h5 class="card-title">Click add to add items to your personal list!</h5>
          </div>
        </div>
        <div type="hidden" class="active-user-id" value="{{userid}}"></div>
        {{#each items as |item|}}
        <div class="card mb-3 overflow-auto">
          <div class="row g-0 d-flex align-items-center" style="height: 10rem">
            <div class="col-md-2">
              <img src="{{item.img_link}}" class="img-fluid rounded-start" alt="..." />
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <h5 class="card-title card-title-overflow">{{item.item_name}}</h5>
                <p class="card-text card-description-overflow">{{item.description}}</p>
              </div>
            </div>
            <div class="col-md-2">
              <div class="card-body">
                <a href="{{item.purchase_link}}">Purchase Link</a>
                <p class="card-text">
                  <small class="text-muted">Added by: {{{user.username}}}</small>
                </p>
              </div>
            </div>
            <div class="col-md-1 common-item">
              <input type="hidden" id="{{item.user_id}}" class="user_id" />
              <input type="hidden" id="{{item.id}}" class="item_id"  />
              <button type="button" class="btn btn-light btn-lg add mb-2" data-id="{{item.id}}"> 
                Add
              </button>
            </div>
          </div>
        </div>
        <p>{{item.list.id}}</p>
        {{/each}}
        
      </div>
      <div class="col-4">
        <div class="card m-2">
          <div class="card-header">
            <h4>Your Wish List!</h4>
          </div>
          <div class="card-body">
            <h5 class="card-title">Click edit to edit or delete items to your personal list.</h5>
          </div>
        </div>
        {{#each list.items as |item|}}
        <div class="card mb-3 overflow-auto">
          <div class="row g-0 d-flex align-items-center" style="height: 10rem">
            <div class="col-md-2">
              <img src="{{item.img_link}}" class="img-fluid rounded-start" alt="..." />
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <h5 class="card-title card-title-overflow">{{item.item_name}}</h5>
                <p class="card-text card-description-overflow">{{item.description}}</p>
              </div>
            </div>
            <div class="col-md-2">
              <div class="card-body">
                <a href="{{item.purchase_link}}">Purchase Link</a>
                <p class="card-text">
                  <small class="text-muted">Added by: {{{user.username}}}</small>
                </p>
              </div>
            </div>
            <div class="col-md-1">
              <button type="button" class="btn shadow-sm btn-light btn-lg">
                Edit
              </button>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="col-4">
        <div class="card m-2">
          <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title text-center username">{{name}}</h5>
            <a href="/additem" class="btn shadow-sm btn-light">Add an item</a>
          </div>
        </div>
      </div>
    </div>
  </div>
    <script src="/js/dashboard.js"></script>
    <script src="/js/edititem.js"></script>
